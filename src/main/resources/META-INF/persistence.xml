<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="com.rootls">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.rootls.model.Menu</class>
        <class>com.rootls.model.Permission</class>
        <class>com.rootls.model.Role</class>
        <class>com.rootls.model.User</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/db_test"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="123"/>
        </properties>
    </persistence-unit>
</persistence>